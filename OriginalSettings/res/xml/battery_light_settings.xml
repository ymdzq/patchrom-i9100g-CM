<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:settings="http://schemas.android.com/apk/res/com.android.OriginalSettings">
    <PreferenceCategory android:title="@string/notification_light_general_title" android:key="general_section">
        <CheckBoxPreference android:persistent="false" android:title="@string/battery_light_title" android:key="battery_light" />
        <CheckBoxPreference android:persistent="false" android:title="@string/battery_low_pulse_title" android:key="battery_low_pulse" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/battery_light_list_title" android:key="colors_list">
        <com.android.OriginalSettings.notificationlight.ApplicationLightPreference android:persistent="false" android:title="@string/battery_light_low_color_title" android:key="low_color" />
        <com.android.OriginalSettings.notificationlight.ApplicationLightPreference android:persistent="false" android:title="@string/battery_light_medium_color_title" android:key="medium_color" />
        <com.android.OriginalSettings.notificationlight.ApplicationLightPreference android:persistent="false" android:title="@string/battery_light_full_color_title" android:key="full_color" />
    </PreferenceCategory>
</PreferenceScreen>